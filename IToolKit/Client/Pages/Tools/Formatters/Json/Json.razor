@page "/Formatters/Json"
@using IToolKit.Client.API.Enums.Tools.Formatters;

<MudText Typo="Typo.h1">Json Fromatter</MudText>
<MudTextField T="string" Immediate Label="Input" Lines="5" Variant="Variant.Outlined" Placeholder="Type here ..." @bind-Value="@_InputValue" />
<MudGrid Class="my-2 d-flex align-center flex-grow-1">
    <MudItem xs="12" sm="3">
        <MudSelect Variant="Variant.Outlined" T="FormatterSpacesEnum" Label="Spaces" ValueChanged="OnJsonFormatterSpacesChange">
            <MudSelectItem Value="FormatterSpacesEnum.TwoSpaces">Two Spaces</MudSelectItem>
            <MudSelectItem Value="FormatterSpacesEnum.FourSpaces">Four Spaces</MudSelectItem>
            <MudSelectItem Value="FormatterSpacesEnum.Tab">Tab</MudSelectItem>
        </MudSelect>
    </MudItem>
    <MudItem>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="()=> Format()">Format</MudButton>
    </MudItem>
</MudGrid>

<MudTextField Lines="12" Variant="Variant.Outlined" Label="Result" @bind-Value="@_JsonFormatedResult" ReadOnly />