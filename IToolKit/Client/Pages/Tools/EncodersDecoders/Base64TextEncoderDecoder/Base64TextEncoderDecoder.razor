@page "/EncodersDecoders/Base64"
@using IToolKit.Client.API.Enums.Tools.EncodersDecoders;

<MudText Typo="Typo.h1">Base64 Text Encoder / Decoder</MudText>
<MudTextField T="string" Label="Input" Lines="5" Variant="Variant.Outlined" Immediate Placeholder="Type here ..."
     TextChanged="OnChangeEvent" />
 <MudGrid Class="my-2 d-flex align-center flex-grow-1">
    <MudItem xs="12" sm="3">
         <MudSelect Variant="Variant.Outlined" T="EncodeDecodeTypeEnum" Label="Encode/Decode" ValueChanged="OnHashTypeChange">
             <MudSelectItem Value="EncodeDecodeTypeEnum.Encode" />
             <MudSelectItem Value="EncodeDecodeTypeEnum.Decode" />
         </MudSelect>
     </MudItem>
     <MudItem>
         <MudCheckBox Color="Color.Primary" T="bool" @bind-Checked="_IsAutoUpdate" Label="Auto Update" />
     </MudItem>
     <MudItem>
         @if (_IsAutoUpdate == false)
        {
            <MudButton Class="mb-2" Color="Color.Primary" Variant="Variant.Filled" OnClick="()=> Calc(_CurrentValue)">
                @_EncodeDecodeType
            </MudButton>
        }
    </MudItem>
</MudGrid>

<MudTextField Variant="Variant.Outlined" Lines="5" Label="Result" @bind-Value="@_Result" ReadOnly />
