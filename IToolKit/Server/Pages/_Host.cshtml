@page "/"
@namespace IToolKit.Server.Pages
@using IToolKit.Client
@using IToolKit.Server.Extensions;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";

    RenderMode renderMode = RenderMode.WebAssembly;

    if (Request.ShouldRenderStaticMode())
        renderMode = RenderMode.Static;

    <component type="typeof(App)" render-mode="@renderMode" />
}