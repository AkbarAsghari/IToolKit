@page "/EncodersDecoders/URL"
@using IToolKit.API.Enums.Tools.EncodersDecoders;

<MudText Typo="Typo.h1">URL Encoder / Decoder</MudText>
<MudSelect T="EncodeDecodeTypeEnum" Label="Encode/Decode" ValueChanged="OnHashTypeChange">
    <MudSelectItem Value="EncodeDecodeTypeEnum.Encode" />
    <MudSelectItem Value="EncodeDecodeTypeEnum.Decode" />
</MudSelect>
<MudTextField T="string" Label="Input" Lines="5" Variant="Variant.Outlined" Immediate Placeholder="Type here ..." TextChanged="OnChangeEvent" />
<MudCheckBox Color="Color.Primary" T="bool" @bind-Checked="_IsAutoUpdate" Label="Auto Update" />
@if (_IsAutoUpdate == false)
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="()=> Calc(_CurrentValue)">@_EncodeDecodeType</MudButton>
}
<MudTextField Variant="Variant.Outlined" Label="Result" @bind-Value="@_Result" ReadOnly />
