@page "/Ciphers/AES"
@using IToolKit.API.Enums.Tools.Ciphers;

<MudText Typo="Typo.h1">AES</MudText>
<MudSelect Label="Encrypt/Decrypt" T="CipherTypesEnum" ValueChanged="OnCipherTypeChangeAsync">
    <MudSelectItem Value="@(CipherTypesEnum.Encrypt)">
        Encrypt
    </MudSelectItem>
    <MudSelectItem Value="@(CipherTypesEnum.Decrypt)">
        Decrypt
    </MudSelectItem>
</MudSelect>
<MudTextField T="string" Immediate Label="Input" Lines="5" Variant="Variant.Outlined" Placeholder="Type here ..." TextChanged="OnInputChange" />
<MudTextField T="string" Immediate Label="Security" Placeholder="Type Security here ..." TextChanged=OnSecurityValueChange />
<MudCheckBox T="bool" Color="Color.Primary" @bind-Checked="_IsAutoUpdate" Label="Auto Update" />
@if (_IsAutoUpdate == false)
{
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="()=> CalcHash()">@CipherType</MudButton>
}
<MudTextField Lines="12" Variant="Variant.Outlined" Label="@($"{CipherType.ToString()}ed Text")" @bind-Value="@_AESResult" ReadOnly />