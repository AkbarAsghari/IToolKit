@page "/Generators/UUID"

<MudText Typo="Typo.h1">UUID</MudText>

<MudNumericField Min="1" Step="1" Label="Count" @bind-Value=@_Count />
<MudSwitch Color="Color.Primary" T="bool" Label="- Hyphens" @bind-Checked=@_IsHyphens />
<MudSwitch Color="Color.Primary" T="bool" Label="Uppercase" @bind-Checked=@_IsUpperCase />
<MudSelect Label="Version" T="string" @bind-Value=@_UuidVersion>
    <MudSelectItem Value="@("One")">
        Version-1 (TimeBased) UUID
    </MudSelectItem>
    <MudSelectItem Value="@("Four")">
        Version-4 (Random) UUID
    </MudSelectItem>
</MudSelect>
<MudButton Color="Color.Primary" OnClick="GnerateUUID" Variant="Variant.Filled">Generate UUID(s)</MudButton>
<MudTextField Lines="12" Label="Result" Variant="Variant.Outlined" @bind-Value=@_Result ReadOnly />
