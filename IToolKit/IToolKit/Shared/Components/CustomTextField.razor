@inherits MudTextField<string>
@inject IJSRuntime JSRuntime

<MudGrid Spacing="1" Class="d-flex justify-end">
    @if (ReadOnly)
    {
        <MudItem>
            <MudButton Class="mb-n1" StartIcon="@Icons.Material.Filled.QrCode" IconSize="Size.Large" Size="Size.Small" Variant="Variant.Filled" DisableElevation OnClick="GenerateQRCode">QR Code</MudButton>
            </MudItem>
        <MudItem>
            <MudButton Class="mb-n1" StartIcon="@Icons.Material.Filled.ContentCopy" IconSize="Size.Large" Size="Size.Small" Variant="Variant.Filled" DisableElevation OnClick="Copy">Copy</MudButton>
            </MudItem>
    }
    else
    {
        <MudItem>
            <MudIconButton Class="mb-n1" Icon="@Icons.Material.Filled.Clear" Size="Size.Medium" Variant="Variant.Filled" DisableElevation OnClick="Clear" />
            </MudItem>

    }
</MudGrid>

@{
    base.BuildRenderTree(__builder);
}