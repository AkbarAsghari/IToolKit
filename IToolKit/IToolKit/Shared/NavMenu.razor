@using IToolKit.API.Assembly;
@using IToolKit.API.Extensions;

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>

    @foreach (var groupTool in AssemblyTools.GetGroupToolAndTools().SortByOrderAttribute())
    {
        <MudNavGroup Title="@groupTool.Key.MenuDisplayName">
            @foreach (var tool in groupTool.Value)
            {
                <MudNavLink Href="@($"{groupTool.Key.Route}/{tool.Route}")" Match="NavLinkMatch.Prefix">@tool.MenuDisplayName</MudNavLink>
            }
        </MudNavGroup>
    }

    <MudDivider />

    <MudNavLink Href="/Settings" Match="NavLinkMatch.Prefix">Settings</MudNavLink>
</MudNavMenu>