@page "/Generators/Password"

<ToolUI T="PasswordToolProvider">
    <MudGrid>
        <MudItem>
            <MudCheckBox @bind-Checked="_CapitalLetters" T="bool" Color="Color.Primary" Label="A-Z" />
        </MudItem>
        <MudItem>
            <MudCheckBox @bind-Checked="_Numbers" T="bool" Color="Color.Primary" Label="0-9" />
        </MudItem>
        <MudItem>
            <MudCheckBox @bind-Checked="_LowerCaseLetters" T="bool" Color="Color.Primary" Label="a-z" />
        </MudItem>
        <MudItem>
            <MudCheckBox @bind-Checked="_Symbuls" T="bool" Color="Color.Primary" Label="@("!@#$%^&*")" />
        </MudItem>
    </MudGrid>
    <MudItem xs="12" sm="4" md="3">
        <MudNumericField @bind-Value="_Count" Min="1" Max="1000" Class="mb-2" Label="Count"></MudNumericField>
    </MudItem>
    <MudItem xs="12" sm="4" md="3">
        <MudSlider @bind-Value="_CharactersLength" Min="5" Max="128" Color="Color.Primary" Class="mb-2">Characters : @_CharactersLength.ToString()</MudSlider>
    </MudItem>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="GeneratePassword" Class="mb-2">Generate</MudButton>
    <CustomTextField Label="Password" Lines=15 Variant="Variant.Outlined" @bind-Value=@_Result ReadOnly MonoSpace />
</ToolUI>
