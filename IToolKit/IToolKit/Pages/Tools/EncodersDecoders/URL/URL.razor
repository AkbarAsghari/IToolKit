@page "/EncodersDecoders/URL"
@using IToolKit.API.Enums.Tools.EncodersDecoders;

<MudText Typo="Typo.h1">URL Encoder / Decoder</MudText>
<CustomTextField Label="Input" Lines="5" Variant="Variant.Outlined" Immediate Placeholder="Type here ..." TextChanged="OnChangeEvent" />
<MudGrid Class="my-2 d-flex align-center flex-grow-1">
    <MudItem xs="12" sm="3">
         <MudSelect Variant="Variant.Outlined" T="EncodeDecodeTypeEnum" Label="Encode/Decode" ValueChanged="OnHashTypeChange">
             <MudSelectItem Value="EncodeDecodeTypeEnum.Encode" />
             <MudSelectItem Value="EncodeDecodeTypeEnum.Decode" />
         </MudSelect>
     </MudItem>
</MudGrid>
<CustomTextField Variant="Variant.Outlined" Lines="5" Label="Result" @bind-Value="@_Result" ReadOnly />
