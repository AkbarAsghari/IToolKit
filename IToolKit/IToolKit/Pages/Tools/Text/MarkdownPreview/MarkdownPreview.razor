@page "/Text/Markdown"

<MudText Typo="Typo.h1">Markdown Preview</MudText>
<MudSelect Variant="Variant.Outlined" Label="Theme" T="string" @bind-Value="_Theme">
    <MudSelectItem T="string" Value="@("light")">Light</MudSelectItem>
    <MudSelectItem T="string" Value="@("dark")">Dark</MudSelectItem>
</MudSelect>
<MudGrid Class="mt-2">
    <MudItem xs="12" md="6">
        <MudText>Markdown</MudText>
        <CustomTextField Immediate Lines="25" TextChanged="OnInputChange"></CustomTextField>
        </MudItem>
        <MudItem xs="12" md="6">
        <MudText>Preview</MudText>
        <IToolKit.Shared.Components.Markdown.MarkdownViewer Theme="@_Theme" Markdown="@_Markdown" Height="31.7em" />
        </MudItem>
        </MudGrid>
