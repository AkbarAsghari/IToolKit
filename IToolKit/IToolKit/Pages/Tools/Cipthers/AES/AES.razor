@page "/Ciphers/AES"
@using IToolKit.API.Enums.Tools.Ciphers;

<MudText Typo="Typo.h1">AES</MudText>
<CustomTextField Immediate Label="Input" Lines="5" Variant="Variant.Outlined" Placeholder="Type here ..." TextChanged="OnInputChange" />
<CustomTextField Class="mt-2" Immediate Label="Security" Variant="Variant.Outlined" Placeholder="Type Security here ..." TextChanged=OnSecurityValueChange />
<MudGrid Class="my-2 d-flex align-center flex-grow-1">
    <MudItem>
        <MudSelect Variant="Variant.Outlined" T="CipherTypesEnum" Label="Encrypt/Decrypt" ValueChanged="OnCipherTypeChangeAsync">
            <MudSelectItem Value="CipherTypesEnum.Encrypt" />
            <MudSelectItem Value="CipherTypesEnum.Decrypt" />
        </MudSelect>
    </MudItem>
    <MudItem>
        <MudCheckBox T="bool" Color="Color.Primary" @bind-Checked="_IsAutoUpdate" Label="Auto Update" />
    </MudItem>
    <MudItem>
        @if (_IsAutoUpdate == false)
        {
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="()=> CalcHash()">@CipherType</MudButton>
        }
    </MudItem>
</MudGrid>
<CustomTextField Lines="10" Variant="Variant.Outlined" Label="@($"{CipherType.ToString()}ed Text")" @bind-Value="@_AESResult" ReadOnly />